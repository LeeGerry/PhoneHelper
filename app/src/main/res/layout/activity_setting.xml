<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:me="http://schemas.android.com/apk/res/proheart.me.phonehelper"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:text="设置" />
    <proheart.me.phonehelper.ui.SettingView
        android:id="@+id/svSetting1"
        me:setting_title="自动更新设置"
        me:desc_on="自动更新已开启"
        me:desc_off="自动更新已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <proheart.me.phonehelper.ui.SettingView
        android:id="@+id/svSetAddress"
        me:setting_title="归属地设置"
        me:desc_on="归属地显示已开启"
        me:desc_off="归属地显示已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <proheart.me.phonehelper.ui.SettingClickView
        android:id="@+id/svAddressBgSelect"
        me:setting_title="选择归属地显示背景"
        me:desc_on=""
        me:desc_off=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <proheart.me.phonehelper.ui.SettingClickView
        android:id="@+id/svAddressPosition"
        me:setting_title="设置归属地显示位置"
        me:desc_on=""
        me:desc_off=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <proheart.me.phonehelper.ui.SettingView
        android:id="@+id/svBlackIntercept"
        me:setting_title="黑名单拦截设置"
        me:desc_on="黑名单拦截已开启"
        me:desc_off="黑名单拦截已关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>